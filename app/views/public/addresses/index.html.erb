<div class="container">
  <div class="row p-4">
    <h4>配送先登録/一覧</h4>
  </div>

  <%= form_with model: @address, url:addresses_path(@customer), method: :post do |f| %>

    <div class="row py-1">
      <div class="col-3">郵便番号(ハイフンなし)</div>
      <div class="col-9">
        <%= f.text_field :post_code, placeholder: "0000000" %>
      </div>
    </div>

    <div class="row py-1">
      <div class="col-3">住所</div>
      <div class="col-5">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'form-control border-dark' %>
      </div>
      <div class="col-4"></div>
    </div>

    <div class="row py-1">
      <div class="col-3">宛名</div>
      <div class="col-5">
        <%= f.text_field :name, placeholder: "令和道子" %>
      </div>
      <div class="col-4">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>

  <% end %>

  <div class="row pt-5">

    <div class="col-8">
    <table class="table">
      <thead>
        <tr>
          <th class="table-secondary border border-dark text-center">
            郵便番号
          </th>
          <th class="table-secondary border border-dark text-center">
            住所
          </th>
          <th class="table-secondary border border-dark text-center">
            宛名
          </th>
          <th class="table-secondary border border-dark"></th>
        </tr>
      </thead>

      <tbody>

        <% @addresses.each do |address| %>
        <tr>
          <td class="table-light border border-dark align-middle">
            <%= address.post_code %>
          </td>
          <td class="table-light border border-dark align-middle">
            <%= address.address %>
          </td>
          <td class="table-light border border-dark align-middle">
            <%= address.name %>
          </td>
          <td class="table-light border border-dark align-middle text-center">
            <%= link_to "編集する", edit_address_path(address), class: 'btn btn-success' %>
            <%= link_to "削除する", address_path(address), method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr>
        <% end %>

      </tbody>


      </table>
    </div>
    <div class="col-4"></div>
  </div>

</div>
