<div class="container">

  <div class="row pt-5 pb-3 ml-5">
    <h4>ログイン</h4>
  </div>
  <div class="row pb-4 pl-3 ml-5">
    <h5>会員の方はこちらからログイン</h5>
  </div>

<!--ログイン-->
　<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="row">
        <div class="offset-2 col-2">メールアドレス</div>
        <div class="col-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
        <div class="col-3"></div>

      </div>

      <div class="row pt-3">
        <div class="offset-2 col-2">パスワード</div>
        <div class="col-5 pr-3">
           <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>

          <div class="actions py-4">
            <%= f.submit "ログイン", class: 'btn btn-primary' %>
          </div>
        </div>
        <div class="col-3"></div>
      </div>
  <% end %>

  <!--会員登録済みの方-->
      <div class="row pb-4 pl-3 ml-5">
        <h5>会員登録がお済みでない方</h5>
      </div>
      <div class="row">
        <div class="col-11 offset-1 pl-3 pb-5">
          <%= link_to "こちら", new_customer_registration_path, class: 'px-3' %>
         から新規登録を行って下さい。
        </div>
      </div>

</div>




