<div class="container">
  <div class="row">
    <h4 class="p-4">注文情報確認</h4>
  </div>

  <%= form_with model: @order, url:orders_path, method: :post do |f| %>

  <!--カート情報-->
  <div class="row">

    <div class="col-5">
      <table class="table table-border">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-2">
      <table class="table table-border">
          <tr>
            <th>送料</th>
            <td></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td></td>
          </tr>
      </table>
    </div>
  </div>

  <!--支払い方法-->
  <div class="row">
    <div class="col-2 offset-1">
      <h5>支払方法</h5>
    </div>
    <div class="col-9">
      <%= @order.payment_method_i18n %>
    </div>
  </div>

  <!--お届け先-->
  <div class="row">
    <div class="col-2 offset-1">
      <h5>お届け先</h5>
    </div>
    <div class="col-9">
      〒 <%= @order.delivery_post_code %>
         <%= @order.delivery_address %>
         <%= @order.delivery_name %>
    </div>
  </div>

  <!--送信ボタン-->
  <div class="row">
    <div class="col-2 offset-5">
      <%= f.submit "注文を確定する", class: 'btn btn-success' %>
    </div>
    <div class="col-5"></div>
  </div>

  <% end %>

</div>