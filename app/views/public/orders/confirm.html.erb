<div class="container">
  <div class="row">
    <h4 class="p-4">注文情報確認</h4>
  </div>

  <%= form_with model: @order, url:orders_path, method: :post do |f| %>

  <!--カート情報-->
  <div class="row">

    <div class="col-8">
      <table class="table table-border border-bottom">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <span class="mx-2"><%= image_tag cart_item.item.get_item_image(50, 50) %></span>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>

    <div class="col-3">
      <table class="table table-border">
        <tr>
          <th>送料</th>
          <td>
            <%= f.hidden_field :postage, value: @postage %>
            <%= @postage %>
          </td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= @total_price %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td>
            <%= f.hidden_field :total_payment, value: @total_payment %>
            <%= @total_payment %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-1"></div>
  </div>

  <!--支払い方法-->
  <div class="row">
    <div class="col-2 offset-1">
      <h5>支払方法</h5>
    </div>
    <div class="col-9">
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= @order.payment_method_i18n %>
    </div>
  </div>

  <!--お届け先-->
  <div class="row">
    <div class="col-2 offset-1">
      <h5>お届け先</h5>
    </div>
    <div class="col-9">
      <div>
          <%= f.hidden_field :delivery_post_code, value: @order.delivery_post_code %>
        〒<%= @order.delivery_post_code %>
          <%= f.hidden_field :delivery_address, value: @order.delivery_address %>
          <%= @order.delivery_address %>
      </div>
      <div class="pl-3">
          <%= f.hidden_field :delivery_name, value: @order.delivery_name %>
          <%= @order.delivery_name %>
      </div>
    </div>
  </div>

  <!--送信ボタン-->
  <div class="row">
    <div class="col-2 offset-5">
      <%= f.submit "注文を確定する", class: 'btn btn-success m-5' %>
    </div>
    <div class="col-5"></div>
  </div>

  <% end %>

</div>