<div class="container">
  <div class="row">
    <h4 class="p-4">注文情報入力</h4>
  </div>

  <%= form_with model: @order, url:orders_confirm_path do |f| %>

    <div class="row">
      <div class="col-10 offset-1">
        <h5>支払い方法</h5>
        <div>
          <!--%= f.hidden_field :payment_method, value => @payment_method.id %>-->
          <div class="pl-3">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
          </div>

          <div class="pl-3">
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>
          </div>
        </div>
      </div>
      <div class="col-1"></div>
    </div>

    <div class="row mt-3 mb-4">
      <div class="col-10 offset-1">
        <h5>お届け先</h5>
        <!--自分の住所-->
        <div class="pl-3">
          <%= f.radio_button :address_option, 0 %>
          <%= f.label :address_option, "ご自身の住所" %>
          <div class="pl-5 pb-2">
          〒<%= @customer.post_code %>
            <%= @customer.address %>
            <%= @customer.last_name %><%= @customer.first_name %>
          </div>
        </div>

        <!--登録先住所-->
        <div class="pl-3">
          <%= f.radio_button :address_option, 1 %>
          <%= f.label :address_option, "登録済み住所から選択" %>
          <div class="ml-5 mb-3">
          <%= f.select :select_option, options_from_collection_for_select(@customer.addresses.all, :id, :address_display) %>
          </div>
        </div>

        <!--新規登録住所-->
        <div class="pl-3">
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :address_option, "新しいお届け先" %>

          <div class="pl-5">
            郵便番号(ハイフンなし)
            <%= f.text_field :delivery_post_code, placeholder: "0000000",class: 'ml-2' %>
          </div>
          <div class="pl-5">
            住所
            <%= f.text_field :delivery_address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'ml-5' %>
          </div>
          <div class="pl-5">
            宛名
            <%= f.text_field :delivery_name, placeholder: "令和道子", class: 'ml-5' %>
          </div>

        </div>
      </div>
      <div class="col-1"></div>
    </div>

    <div class="row m-2">
      <div class="col-2 offset-5">
      <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
      </div>
      <div class="col-5"></div>
    </div>

  <% end %>

</div>
