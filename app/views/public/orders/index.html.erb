<div class="container">
  <div class="row px-5 pt-5">
    <h4>注文履歴一覧</h4>
  </div>

  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead class="text-center">
          <tr>
            <th class="table-secondary border border-dark">
              注文日
            </th>
            <th class="table-secondary border border-dark">
              配送先
            </th>
            <th class="table-secondary border border-dark">
              注文商品
            </th>
            <th class="table-secondary border border-dark">
              支払金額
            </th>
            <th class="table-secondary border border-dark">
              ステータス
            </th>
            <th class="table-secondary border border-dark">
              注文詳細
            </th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class="table-light border border-dark">
              <%= order.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td class="table-light border border-dark">
              <div class="align-middle">
                〒<%= order.delivery_post_code %>
              </div>
              <div class="align-middle">
                <%= order.delivery_address %>
              </div>
              <div class="align-middle">
                <%= order.delivery_name %>
              </div>
            </td>
            <td class="table-light border border-dark">
              <% order.order_details.each do |order_detail| %>
                <div class="align-middle">
                  <%= order_detail.item.name %>
                </div>
              <% end %>
            </td>
            <td class="table-light border border-dark align-middle">
              <%= order.total_payment %>
            </td>
            <td class="table-light border border-dark align-middle">
              <%= order.status_i18n %>
            </td>
            <td class="table-light border border-dark align-middle text-center">
              <%= link_to "表示する", order_path(order), class: 'btn btn-primary' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2 offset-5 mb-4">
      <%= paginate @orders %>
    </div>
    <div class="col-5"></div>
  </div>
  
</div>
