<div class="container">

  <div class="row">
    <h4 class="py-4">会員情報編集</h4>
  </div>


  <%= form_with model: @customer, url: customer_path(@customer), method: :patch do |f| %>

  <!--名前-->
    <div class="row pb-4">
      <div class="col-3">名前</div>
      <div class="col-3">
        <%= f.text_field :last_name %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name %>
      </div>
      <div class="col-3"></div>
    </div>

    <div class="row pb-4">
      <div class="col-3">フリガナ</div>
      <div class="col-3">
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name_kana %>
      </div>
      <div class="col-3"></div>
    </div>
    
  <!--住所-->
    <div class="row pb-4">
      <div class="col-3">郵便番号</div>
      <div class="col-3 ml-5">
        <%= f.text_field :post_code %>
      </div>
      <div class="col-6"></div>
    </div>

    <div class="row pb-4">
      <div class="col-3">住所</div>
      <div class="col-6 ml-5">
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      <div class="col-3"></div>
    </div>

  <!--電話番号-->
    <div class="row pb-4">
      <div class="col-3">電話番号</div>
      <div class="col-3 ml-5">
        <%= f.text_field :telephone_number %>
      </div>
      <div class="col-6"></div>
    </div>

  <!--メールアドレス-->
    <div class="row pb-4">
      <div class="col-3">メールアドレス</div>
      <div class="col-3 ml-5">
        <%= f.email_field :email %>
      </div>
      <div class="col-6"></div>
    </div>



    <div class="row">
      <div class="actions col-3 offset-3">
        <%= f.submit "編集内容を保存",  class: 'btn btn-success ml-5' %>
      </div>
  
      <div class="col-3">
        <%= link_to "退会する", customers_confirm_path(@customer), class: 'btn btn-danger ml-5' %>
      </div>
    </div>
    
  <% end %>




</div>
