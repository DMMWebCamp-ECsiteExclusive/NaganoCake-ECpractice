<div class="container">
  <div class="row">
    <h4 class="py-4 px-5">マイページ</h4>
  </div>

  <div class="row py-3">
    <h5 class="pr-3">登録情報</h5>
    <div>
       <%= link_to "編集する", customers_information_edit_path(@customer), class: 'btn btn-success' %>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
      <thead>
        <tr>
          <th>氏名</th>
          <td>
            <%= @customer.last_name %>
            <%= @customer.first_name %>
            </td>
        </tr>
        <tr>
          <th>カナ</th>
          <td>
            <%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %>
          </td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </thead>
    </table>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row py-3">
    <h5 class="pr-5">配送先</h5>
    <div>
      <%= link_to "一覧を見る", addresses_path(@customer), class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row pt-3 pb-5">
    <h5 class="pr-4">注文履歴</h5>
    <div>
      <%= link_to "一覧を見る", orders_path(@customer), class: 'btn btn-primary' %>
    </div>
  </div>

</div>
