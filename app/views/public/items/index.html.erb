<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'public/left_contents', genre: @genre %>
    </div>

    <div class="col-8 offset-1">

      <% if params[:genre_name].present? %>
        <h4><%= @genres.name %>一覧<span>（全<%= @items.count %>件）</span></h4>

         <% @items.each do |item| %>

           <%= image_tag item.get_item_image(100, 100) %>
           <%= item.name %>
           <%= item.price %>

         <% end %>
         <%= paginate @genres %>

      <% else %>
        <h4>商品一覧<span>（全<%= @items.count %>件）</span></h4>

        <% @items.each do |item| %>

          <%= image_tag item.get_item_image(100, 100) %>
          <%= item.name %>
          <%= item.price %>

        <% end %>
        <%= paginate @items %>

      <% end %>

    </div>
  </div>
</div>