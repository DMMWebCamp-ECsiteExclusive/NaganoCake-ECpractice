<div class="container">
  <div class="row">
    <h4>会員一覧</h4>
  </div>

  <div class="row border-bottom border-top">
    <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <% @customers.each do |customer| %>
    <tbody>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td><%= customer.is_deleted ? '有効' : '無効' %></td>
      </tr>
    </tbody>
    <% end %>
    </table>
  </div>
</div>
