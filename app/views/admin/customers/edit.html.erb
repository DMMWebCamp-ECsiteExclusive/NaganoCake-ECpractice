<div class="container">
  <div class="row">
    <h4 class="py-4 my-2">
      <%= @customer_name %>さんの会員情報編集
    </h4>
  </div>

  <%= form_with model: @customer, url:admin_customer_path(@customer), method: :patch do |f| %>
  <div class="row mb-3 ml-3">
    <div class="col-2">会員ID</div>
    <div class="col-7">
      <%= @customer.id %>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mb-3 ml-3">
    <div class="col-2">氏名</div>
    <div class="col-7">
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mb-3 ml-3">
    <div class="col-2">フリガナ</div>
    <div class="col-7">
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mb-3 ml-3">
    <div class="col-2">郵便番号</div>
    <div class="col-7">
      <%= f.text_field :post_code %>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mb-3 ml-3">
    <div class="col-2">住所</div>
    <div class="col-7">
      <%= f.text_field :address, class: 'form-control border-dark' %>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mb-3 ml-3">
    <div class="col-2">電話番号</div>
    <div class="col-7">
      <%= f.text_field :telephone_number %>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mb-3 ml-3">
    <div class="col-2">メールアドレス</div>
    <div class="col-7">
      <%= f.text_field :email %>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mb-3 ml-3">
    <div class="col-2">ステータス</div>
    <div class="col-7">
      <%= f.radio_button :is_deleted, "false", disabled: true %>
      <%= f.label :is_deleted_false, "有効" %>

      <%= f.radio_button :is_deleted, "true", disabled: true %>
      <%= f.label :is_deleted_false, "退会" %>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mt-5 ml-3">
    <div class="col-2 offset-2">
      <%= f.submit "変更を保存", class: 'btn btn-success btn-lg' %>
    </div>
    <div class="col-8"></div>
  </div>

  <% end %>
</div>
