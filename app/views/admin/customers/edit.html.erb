<div class="container">
  <div class="row">
    <h4 class="py-4">
      <%= @customer_name %>さんの会員情報編集
    </h4>
  </div>

  <%= form_with model: @customer, url:admin_customer_path(@customer), method: :patch do |f| %>
  <div class="row mb-3">
    <div class="col-2">会員ID</div>
    <div class="col-10">
      <%= @customer.id %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">氏名</div>
    <div class="col-10">
      <%= f.text_field :last_name %>  
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">フリガナ</div>
    <div class="col-10">
      <%= f.text_field :last_name_kana %>  
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">郵便番号</div>
    <div class="col-10">
      <%= f.text_field :post_code %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">住所</div>
    <div class="col-10">
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">電話番号</div>
    <div class="col-10">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">メールアドレス</div>
    <div class="col-10">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">ステータス</div>
    <div class="col-10">
      <%= f.radio_button :is_deleted, "false" %>
      <%= f.label :is_deleted_false, "有効" %>
      
      <%= f.radio_button :is_deleted, "true" %>
      <%= f.label :is_deleted_false, "無効" %>
    </div>
  </div>
  
  <div class="row m-3">
    <%= f.submit "変更を保存",  class: 'btn btn-success' %>
  </div>

  <% end %>
</div>
