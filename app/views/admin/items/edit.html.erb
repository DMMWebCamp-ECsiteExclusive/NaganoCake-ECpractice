<div class="container">
  <div class="row">
    <h4>商品編集</h4>
  </div>
  
  <div class="row">
    <%= form_with model: @items, url:admin_item_path, method: :patch do |f| %>
    
    <div>
      商品画像
      <%= f.file_field :item_image, accept: "image/*" %>
    </div>
    
    <div>
      商品名
      <%= f.text_field :name, placeholder: "商品名" %>
    </div>
    
    <div>
      商品説明
      <%= f.text_area :introduction %>
    </div>
    
    <div>
      ジャンル
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
    
    <div>
      税抜価格
      <%= f.text_field :price, placeholder: "1000" %>
    </div>
    
    <div>
      販売ステータス
      <%= f.radio_button :is_sale, "true" %>
      <%= f.label :is_sale_true, "販売中" %>
      
      <%= f.radio_button :is_sale, "false" %>
      <%= f.label :is_sale_false, "販売停止中" %>
    </div>
    
    <div>
      <%= f.submit "変更を", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
