<div class="container">
  <div class="row">
    <div class="col-3">
      <%= image_tag @item.get_item_image(200, 200) %>
    </div>

    <div class="col-9">
      <div>
        商品名
        <%= @item.name %>
      </div>
      <div>
        商品説明
        <%= @item.introduction %>
      </div>
      <div>
        ジャンル
        <%= @item.genre.name %>
      </div>
      <div>
        税込価格(税抜価格)
        <%= @item.with_tax_price %>
        (<%= @item.price %>)
      </div>
      <div>
        販売ステータス
        <%= @item.is_sale ? '販売中' : '販売停止中' %>
      </div>
    </div>
    <div class="row my-4">
      <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
    </div>
  </div>
</div>
