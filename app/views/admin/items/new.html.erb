<div class="container">

  <div class="row">
    <div class="col-3 offset-2">
      <h4 class="py-4">商品新規登録</h4>
    </div>
    <div class="col-8"></div>
  </div>

  <%= form_with model: @item, url:admin_items_path, method: :post do |f| %>
    <div class="row">
      <div class="col-2 offset-2">
        <div class="pt-4">商品画像</div>
        <div class="pt-4">商品名</div>
        <div class="pt-4">商品説明</div>
        <div class="pt-5">ジャンル</div>
        <div class="pt-4">税抜価格</div>
        <div class="pt-4">販売ステータス</div>
      </div>

      <div class="col-3">
        <div class="pt-3">
          <%= f.file_field :item_image, accept: "image/*" %>
        </div>
        <div class="pt-3">
          <%= f.text_field :name, class: 'form-control border-dark' %>
        </div>
        <div class="pt-3">
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="pt-3">
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), class: 'form-control border-dark' %>
        </div>
        <div class="pt-3">
          <%= f.text_field :price, placeholder: "1000" %>円
        </div>
        <div class="pt-3">
          <%= f.radio_button :is_sale, "true" %>
          <%= f.label :is_sale_true, "販売中" %>

          <%= f.radio_button :is_sale, "false" %>
          <%= f.label :is_sale_false, "販売停止中" %>
        </div>
        <div class="pt-3">
          <%= f.submit "変更を保存", class: 'btn btn-success px-3' %>
        </div>
      </div>
      <div class="col-4"></div>
    </div>
   <% end %>
</div>
