<div class="container">
  <div class="row">
    <h4 class="p-4">注文履歴一覧</h4>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
      <table class="table border-top border-bottom">

        <thead>
          <tr>
            <th class="p-2">購入日時</th>
            <th class="p-2">購入者</th>
            <th class="p-2">注文個数</th>
            <th class="p-2">注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>

          <tr>
            <td class="p-2">
              <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order) %>
            </td>
            <td class="p-2">
              <%= order.customer.last_name + order.customer.first_name %>
            </td>
            <td class="p-2">
              <!--%= order.order_details.@amounts %>-->
            </td>
            <td class="p-2">
              <%= order.status_i18n %>
            </td>
          </tr>

          <% end %>
        </tbody>

      </table>

      <%= paginate @orders %>
    </div>
    <div class="col-1"></div>
  </div>
</div>