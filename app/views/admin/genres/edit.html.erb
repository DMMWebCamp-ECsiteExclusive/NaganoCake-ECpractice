<div class="container">
  <div class="row">
    <h4>ジャンル編集</h4>
  </div>

  <div class="row">
    <div class="pr-3">ジャンル名</div>
    <%= form_with model: @genre, url: edit_admin_genre_path do |f| %>
      <div class="mr-3">
        <%= f.text_field :name %>
      </div>
      <div class="px-2">
        <%= f.submit "変更を", class: 'btn btn-success' %>
      </div>
    <% end %>

  </div>
</div>